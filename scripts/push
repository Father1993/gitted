set -e -o pipefail

# shellcheck disable=SC1091
. "$(dirname "$0")/../sub-scripts/all.sh"

# shellcheck disable=SC2154
"${base}/pull" "$*"

# shellcheck disable=SC2154
"${base}/commit" "$*"

branch=$(git symbolic-ref HEAD --short)

retry_it "Pushing to origin/${branch}" "bash_it ${GIT_BIN} push origin ${branch}"
